- var lang = current.path[0]? current.path[0] : 'en'
-function buildPageTitle() {
  -if(!current.path[0] || current.path[0] === 'index' || current.path[1] === 'index') return 'The Organization Name'
  -else if(current.path[1] === 'pub') return title + ' - ' + public[lang]._data.titles.pub
  -else if (current.path[1] === 'about' || current.path[1] === 'privacy') return public[lang]._data.titles[current.path[1]]
  -else return 'The Organization Name'
-}
-function getUrl() {
  -let theUrl = current.path.join('/')
  -return 'https://sitesdomainaddress.com' + theUrl.replace('/index', '')
-}
head
  meta(charset='utf-8')
  title #{ buildPageTitle() } 

  meta(name='author' content='The Organization Name')
  meta(name='description' content='#{ description }')
  meta(name='keywords' content='#{ keywords }')
  meta(name='robots' content='index,follow')

  meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
  meta(http-equiv='cleartype' content='on')
  meta(name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=yes')

  include ./social
  include ./icon

  link(rel='stylesheet' href='../../assets/css/minireset.min.css')
  link(rel='stylesheet' href='../../assets/css/ndc.css')

  if (lang === 'en' || lang === 'fr' || lang === 'de' || lang === 'es')
    link(rel='stylesheet' href='../../assets/css/ndc.latin.css')
  if (lang === 'ja')
    link(rel='stylesheet' href='../../assets/css/ndc.ja.css')